

<% if not params[:id].nil?
   ex = Exercise.find_by_id(params[:id])
   if ex.nil? %>
   <!-- Exercise not found-->
   <p>This exercise does not exist.</p>
   <% provide(:title, "Exercise not found") %>
   
   <% else #if exercise exists %>
   <% provide(:title, ex.title) %>

<div class="exercisebox">
   <div class="insidebox">
   <%= image_tag ("GIFS/Exercise Images/"+ex.image_url), width: "730px", height: "400px" %> 
   </div>

   <div class="stars">
	<form action="">
		<input class="star star-5" id="star-5" type="radio" name="star"/>
		<label class="star star-5" for="star-5"></label>
		<input class="star star-4" id="star-4" type="radio" name="star"/>
		<label class="star star-4" for="star-4"></label>
		<input class="star star-3" id="star-3" type="radio" name="star"/>
		<label class="star star-3" for="star-3"></label>
		<input class="star star-2" id="star-2" type="radio" name="star"/>
		<label class="star star-2" for="star-2"></label>
		<input class="star star-1" id="star-1" type="radio" name="star"/>
		<label class="star star-1" for="star-1"></label>
	</form>

	</div>
	
	   <h1><p class="exercise"><%= raw(ex.title) %></p></h1>
   
   <h2><p class="exercise">
   <%= raw ex.description %>
   </p></h2>>
   
   <p class="break2">
   </p>
   
   
   <button>Start</button>
    <button>Stop</button>
    <button>Pause</button>
   <% end #of exercise code %>
   
   
   <% else #No id provided for an exercise %>
   <% provide(:title, "Invalid Exercise ID") %>
   <p>No exercise ID provided.</p>
<% end %>
    
   </div>
