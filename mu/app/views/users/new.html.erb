<%= stylesheet_link_tag    'firsthomepage', media: 'all', 'data-turbolinks-track' => true %>


<% provide(:title, "Sign Up") %>
<% @allow_non_user = true %>

<section>
<br>
<div class="box">
<p class="subtitle">Join Us!</p>
<br>
<%= form_for(@user, :html => {:id => "hongkiat-form"}) do |f| %>


<%= render 'shared/error_messages' %>
<br>
<%= f.label "First Name" %>
<%= f.text_field :first_name, style: "width:100%" %>
<br>
<br>
<%= f.label "Last Name" %>
<%= f.text_field :second_name, style: "width:100%" %>
<br>
<br>
<%= f.label "Username" %>
<%= f.text_field :user_name, style: "width:100%" %>
<br>
<br>
<%= f.label "Date of Birth" %>
<%= f.date_field :age, style: "width:100%" %>
<br>
<br>
<%= f.label "Password" %>
<%= f.password_field :password, style: "width:100%" %>
<br>
<br>
<%= f.label "Confirm Password" %>
<%= f.password_field :password_confirmation,style: "width:100%" %>
<br>
<br>
<%= f.label "Email Address" %>
<%= f.email_field :email, style: "width:100%" %>
<br>

<section id="buttons">
         <input name="submit" id="submitbtn" class="home_button button" value="Sign Me Up!" type="submit">
         <br style="clear:both;">
        </section>
<% end %>
</section>
</form>
</div>
</div>
 </section>
